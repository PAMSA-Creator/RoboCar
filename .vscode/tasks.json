{
    "tasks": [
        {
            "type": "shell",
            "label": "avr-gcc build active file",
            "command": "${HOME}/Applications/ArduinoIDE/arduino-1.8.10//hardware/tools/avr/bin/avr-gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${HOME}/Applications/ArduinoIDE/arduino-1.8.10//hardware/tools/avr/bin"
            }
        }
    ],
    "version": "2.0.0"
}